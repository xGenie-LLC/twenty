{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../.cache/tsc",
    "composite": true,
    "declaration": true,
    "paths": {
      "@lingui/core": ["../../node_modules/@lingui/core"],
      "@lingui/react": ["../../node_modules/@lingui/react"]
    },
    "types": [
      "node",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"]
}
